{{ define "form-input-field" }}
<div class="mb-6">
  <label for="{{ .ID }}" class="block text-sm font-medium text-gray-700 mb-1">
    {{ .Label }}
  </label>
  <input
    id="{{ .ID }}"
    name="{{ .Name }}"
    type="{{ .Type }}"
    autocomplete="{{ .Autocomplete }}"
    {{ if .Required }} required {{ end }}
    {{ if .Value }} value="{{ .Value }}" {{ end }}
    class="w-full rounded-md border-2 border-gray-300 px-3 py-2 shadow-sm placeholder-gray-400 focus:border-indigo-500 focus:outline-none"
  >
  {{ template "form-errors" . }}
</div>
{{ end }}

{{ define "form-errors" }}
{{ if .Errors }}
<div class="mt-1 space-y-1">
  {{ range .Errors }}
  <p class="text-xs text-red-600">{{ . }}</p>
  {{ end }}
</div>
{{ end }}
{{ end }}

{{ define "form-submit-button" }}
<button
  type="submit"
  class="w-full bg-d text-white py-2 rounded-md text-lg font-semibold hover:bg-c focus:bg-c "
>
  {{ .Text }}
</button>
{{ end }}
